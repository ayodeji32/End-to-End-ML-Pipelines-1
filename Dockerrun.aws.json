{
   "AWSEBDockerrunVersion": "2",
   "containerDefinitions": [ 
      { 
        "name": "backend",
        "image": "ayodeji32/segmentation-app:backend",
        "hostname": "backend",
        "links": ["frontend"],
        "essential": true,
        "portMappings": [ 
            { 
               "containerPort": 8000,
               "hostPort": 8000
            }
         ],
         "memory": 500
      },

      {
        "name": "frontend",
        "image": "ayodeji32/segmentation-app:frontend",
        "hostname": "frontend",
        "portMappings": [ 
            { 
               "containerPort": 8080,
               "hostPort": 8080
            }
         ],
         "memory": 500
      }
   ] 
}